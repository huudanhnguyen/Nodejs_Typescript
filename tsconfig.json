{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "config/*": ["./src/config/*"],
      "controllers/*": ["./src/controllers/*"],
      "models/*": ["./src/models/*"],
      "services/*": ["./src/services/*"],
      "utils/*": ["./src/utils/*"],
      "middlewares/*": ["./src/middlewares/*"],
      "views/*": ["./src/views/*"],
      "routes/*": ["./src/routes/*"],
      "types/*": ["./src/types/*"],
      "public/*": ["./src/public/*"],
      "app": ["./src/app.ts"]
    },
  }
}
